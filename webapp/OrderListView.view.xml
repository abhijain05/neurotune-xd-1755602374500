<mvc:View
	controllerName="converted.orderlistview.controller.OrderListView"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	displayBlock="true"
          xmlns:commons="sap.ui.commons">
	<Page title="Order List" enableScrolling="true">
		<content>
			<Title text="SAPUI5 App" level="H1"/>
			<VBox class="sapUiSmallMargin">
				<HBox class="sapUiSmallMargin">
					<Input placeholder="Search" liveChange="onSearch" id="searchField"/>
					<Button text="Go" press="onSearch"/>
				</HBox>
				<form:SimpleForm id="filterFormContainer" title="Filter" labelSpanL="3" labelSpanM="3" adjustLabelSpan="true">
					<form:FormElement label="Status">
						<Select selectedKey="{filter>/filter/status}" change="onStatusFilterChange" id="statusDropDown">
							<core:Item key="" text="All"/>
							<core:Item key="IN_PROCESS" text="In Process"/>
							<core:Item key="SHIPPED" text="Shipped"/>
						</Select>
					</form:FormElement>
				</form:SimpleForm>
				<Table items="{orders>}" id="orderTable">
					<columns>
						<Column>
							<header>
								<Text text="Order ID"/>
							</header>
						</Column>
						<Column>
							<header>
								<Text text="Product"/>
							</header>
						</Column>
						<Column>
							<header>
								<Text text="Status"/>
							</header>
						</Column>
						<Column>
							<header>
								<Text text="Amount"/>
							</header>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{OrderID}"/>
								<Text text="{Product}"/>
								<Text text="{Status}"/>
								<Text text="{Amount}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				<Button text="Export to CSV" press="onExportToCSV" id="exportToCSV"/>
			</VBox>
		</content>
	</Page>
</mvc:View>